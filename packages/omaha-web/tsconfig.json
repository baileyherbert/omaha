{
	"include": ["src/**/*", "webpack.config.ts"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"],
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es2017",
		"module": "es2020",
		"importsNotUsedAsValues": "remove",
		"isolatedModules": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"],
			"omaha/*": ["src/omaha/*"],
			"app/*": ["src/app/*"]
		},
		"types": [
			"svelte",
			"svelte/store",
			"svelte/motion",
			"svelte/transition",
			"svelte/animate",
			"svelte/easing"
		]
	}
}
